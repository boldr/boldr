{
  "name": "@boldr/auth",
  "version": "0.1.0-alpha.3",
  "description": "JWT and localStorage mock for Boldr frontend.",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "browser:es2015": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "files": [
    "lib/*.js",
    "dist/*.js"
  ],
  "keywords": [
    "jwt"
  ],
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "build:cjs": "NODE_ENV=cjs babel src --out-dir dist --ignore *.test.js",
    "build:es": "NODE_ENV=es babel src --out-dir lib --ignore *.test.js",
    "clean": "rimraf lib && rimraf dist",
    "format": "prettier --single-quote=true --jsx-bracket-same-line=false --trailing-comma=all --print-width=100 --write \"src/**/*.js\"",
    "prepare": "rimraf lib && NODE_ENV=production prepublish"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-boldr": "0.11.0-beta.3",
    "eslint": "4.5.0",
    "eslint-config-boldr": "0.12.8",
    "prepublish": "^1.3.0",
    "prettier": "1.5.3"
  }
}
