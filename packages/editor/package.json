{
  "name": "@boldr/editor",
  "version": "0.2.0-alpha.1",
  "description": "Draftjs based editor for Boldr",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/strues/boldr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "files": [
    "isrc",
    "ies",
    "icjs"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser:esnext": "es/index.js",
  "scripts": {
    "build": "NODE_ENV=production node ./tools/build.js && yarn sass && yarn copy:css",
    "watch": "babel ./src -d . --ignore *.test.js --watch",
    "prepublishOnly": "node ./tools/build.js",
    "copy:css": "cp styles/boldreditor.css es && cp styles/boldreditor.css lib && cp styles/boldreditor.css umd",
    "sass": "node-sass --output-style compressed styles/boldreditor.scss -o styles",
    "clean": "git clean -fdX .",
    "lint": "eslint src",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": "last 2 versions",
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "draft-convert": "^2.0.0",
    "draft-js": "0.10.3",
    "immutable": "^3.8.2",
    "prop-types": "^15.6.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "21.2.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "enzyme-to-json": "3.1.4",
    "gzip-size": "^4.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "21.2.1",
    "jest-enzyme": "4.0.1",
    "node-sass": "4.5.3",
    "pretty-bytes": "^4.0.2",
    "raf": "3.4.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "sass-loader": "6.0.6",
    "sinon": "4.0.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "setupFiles": [
      "raf/polyfill",
      "./tools/jest/setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "./tools/jest/transform.js"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tools/",
      "/lib/"
    ]
  },
  "keywords": [
    "react"
  ]
}
