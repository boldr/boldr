{
  "name": "boldr-demo",
  "version": "0.1.0-alpha.1",
  "main": "index.js",
  "boldr": {
    "config": "boldr.config.js"
  },
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=3.0.0",
    "yarn": ">=0.23.0"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "keywords": [
    "cms",
    "express",
    "javascript",
    "node",
    "postgres",
    "react",
    "redux",
    "universal",
    "webpack"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "deploy": "better-npm-run deploy",
    "dev": "NODE_ENV=development boldr-core dev",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:prod": "better-npm-run deploy:prod",
    "start": "better-npm-run start",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod"
  },
  "dependencies": {
    "apollo-client": "^1.4.0",
    "better-npm-run": "0.0.15",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "graphql-tag": "^2.2.1",
    "ip": "^1.1.5",
    "isomorphic-fetch": "^2.2.1",
    "material-ui": "next",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-apollo": "^1.4.2",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "styled-components": "^2.0.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-boldr": "0.9.6",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-boldr": "^0.9.9",
    "prettier": "^1.4.2",
    "sinon": "^2.3.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  },
  "betterScripts": {
    "compile": {
      "command": "babel-node bin/compile",
      "env": {
        "DEBUG": "boldr:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile",
      "env": {
        "DEBUG": "boldr:*"
      }
    },
    "deploy:dev": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "boldr:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "boldr:*"
      }
    },
    "start": {
      "command": "babel-node bin/server",
      "env": {
        "DEBUG": "boldr:*"
      }
    },
    "start:dev": {
      "command": "babel-node .boldr/entry/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "boldr:*"
      }
    },
    "start:prod": {
      "command": "babel-node bin/server",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "boldr:*"
      }
    }
  }
}
