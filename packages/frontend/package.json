{
  "name": "boldr-frontend",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "0.1.0",
  "main": "server/index.js",
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "scripts": {
    "build": "NODE_ENV=production boldr build",
    "build:client": "NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",

    "build:flow": "find ./src -name '*.js' -not -path '*/__tests__*' | while read filepath; do cp $filepath `echo $filepath | sed 's/\\/src\\//\\/lib\\//g'`.flow; done",
    "cm": "git-cz",
    "clean": "boldr clean",
    "dev": "NODE_ENV=development boldr dev",
    "lint": "eslint --fix src server webpack",
    "start": "npm run clean && cross-env NODE_ENV=development GRAPHQL_ENDPOINT=http://localhost:2121/api/v1/graphql node server/index.js",
    "start:prod": "NODE_ENV=production boldr start:ssr",
    "precommit": "lint-staged --verbose",
    "prettier": "node ./internal/scripts/prettier.js write",
    "test": "NODE_ENV=test jest --config jest.config.json"
  },
  "dependencies": {
    "@boldr/core": "0.1.0-beta.2",
    "@boldr/icons": "0.1.0-beta.3",
    "@boldr/tools": "0.1.0-beta.2",
    "@boldr/ui": "0.1.0-rc.11",
    "@boldr/utils": "^0.1.0-rc.5",
    "apollo-client": "^1.9.1",
    "color": "2.0.0",
    "draft-convert": "^1.4.9",
    "draft-js": "^0.10.1",
    "immutable": "^3.8.1",
    "immutability-helper": "2.3.1",
    "lodash": "^4.17.4",
    "polished": "1.4.1",
    "react": "^15.6.1",
    "react-apollo": "^1.4.14",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-tagsinput": "^3.17.0",
    "react-transition-group": "^2.2.0",
    "react-universal-component": "2.5.0",
    "recompose": "0.25.0",
    "redux": "^3.7.2",
    "redux-form": "^7.0.3",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "styled-components": "^2.1.2",
    "webpack-flush-chunks": "^1.1.23"
  },
  "devDependencies": {
    "@boldr/cli": "0.2.0-beta.1",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-boldr": "0.11.0-beta.4",
    "babel-watch": "^2.0.7",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "4.5.0",
    "eslint-config-boldr": "0.12.8",
    "express": "^4.15.4",
    "flow-bin": "^0.53.1",
    "jest-styled-components": "4.4.1",
    "prettier": "1.5.3",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.6.1",
    "redbox-react": "^1.5.0",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1"
  }
}
