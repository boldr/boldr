{
  "name": "boldr-tools",
  "version": "0.0.2",
  "description": "Helpers designed for use with Boldr and fullstack react apps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "scripts": {
    "build": "npm run clean && npm run format && npm run build:commonjs && npm run build:es",
    "build:commonjs": "NODE_ENV=production BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "NODE_ENV=production BABEL_ENV=es babel src --out-dir es",
    "clean": "rimraf lib es",
    "format": "prettier --single-quote=true --jsx-bracket-same-line=false --trailing-comma=all --print-width=100 --write \"src/**/*.js\"",
    "test": "jest"
  },
  "keywords": [
    "boldr",
    "react",
    "webpack",
    "dev",
    "helpers"
  ],
  "engines": {
    "node": ">=7"
  },
  "files": [
    "es/*",
    "lib/*",
    "src/*"
  ],
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/src/",
      "/es/",
      "/lib/"
    ]
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "lodash.reduce": "^4.6.0",
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  }
}
