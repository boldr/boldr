{
  "env": {
    "api": {
      "presets": ["latest"],
      "plugins": [
        "transform-class-properties",
        ["module-resolver", {
          "root": ["./api/src"]
        }]
      ]
    },
    "development": {
      "presets": ["boldr"],
      "plugins": [
        "react-hot-loader/babel",
        ["module-resolver", {
          "root": ["./cms/src"],
          "alias": {
             "components": "./cms/src/components",
             "state": "./cms/src/state",
             "theme": "./cms/src/theme",
             "scenes": "./cms/src/scenes"
           }
        }]
      ]
    },
    "production": {
      "presets": ["boldr"],
      "plugins": [
        "transform-flow-strip-types",
        ["module-resolver", {
          "root": ["./cms/src"],
          "alias": {
             "components": "./cms/src/components",
             "state": "./cms/src/state",
             "theme": "./cms/src/theme",
             "scenes": "./cms/src/scenes"
           }
        }]
      ]
    },
    "test": {
      "presets": ["boldr"],
      "plugins": [
        "istanbul",
        ["module-resolver", {
          "root": ["./cms/src"],
          "alias": {
             "components": "./cms/src/components",
             "state": "./cms/src/state",
             "theme": "./cms/src/theme",
             "scenes": "./cms/src/scenes"
           }
        }]
      ]
    }
  }
}
