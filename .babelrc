{
  "presets": ["react", "es2015", "es2015-webpack", "stage-0"],

  "plugins": [["transform-runtime", { "polyfill": false }], "transform-decorators-legacy", "transform-flow-strip-types", "lodash"],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel",
        ["react-transform", {
            "transforms": [{
                "transform": "react-transform-catch-errors",
                "imports": ["react", "redbox-react"]
              }
            ]
        }]
      ]
    }
  }
}
