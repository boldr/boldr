{
  "lerna": "2.0.0-rc.5",
  "npmClient": "yarn",
  "hoist": true,
  "nohoist": "*loader",
  "commands": {
    "bootstrap": {
      "ignore": [
        "api",
        "packages/boldr-cli",
        "packages/boldr-tools"
      ]
    }
  },
  "packages": [
    "api/*",
    "packages/*"
  ],
  "version": "independent",
  "changelog": {
    "repo": "strues/boldr",
    "labels": {
      "tag: new feature": ":tada: New Feature",
      "tag: breaking change": ":boom: Breaking Change",
      "tag: bug fix": ":bug: Bug Fix",
      "tag: enhancement": ":bulb: Enhancement",
      "tag: documentation": ":memo: Documentation",
      "tag: internal": ":house: Internal"
    },
    "cacheDir": ".changelog"
  }
}
