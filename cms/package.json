{
  "name": "boldr",
  "version": "0.3.11",
  "description": "a bold cms.",
  "main": "tools/scripts/server.js",
  "engines": {
    "node": "6.2.0",
    "npm": "3.7.3"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:client": "rimraf public/assets",
    "clean:server": "rimraf server.js && rimraf server.js.map",
    "dev": "better-npm-run dev",
    "lint": "eslint -c .eslintrc src",
    "start": "npm run start:prod",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "test": "better-npm-run test:client",
    "test:client": "better-npm-run test:client",
    "test:watch": "./node_modules/.bin/mocha  -w --opts ./mocha.opts './src/**/*.test.js'",
    "watch:client": "better-npm-run watch:client",
    "watch:server": "better-npm-run watch:server"
  },
  "betterScripts": {
    "build": {
      "command": "better-npm-run build:client && better-npm-run build:server",
      "env": {
        "NODE_ENV": "production",
        "SITE_URL": "https://staging.boldr.io",
        "SSR_PORT": 9221,
        "API_HOST": "https://api.boldr.io",
        "API_PREFIX": "/v1"
      }
    },
    "build:server": {
      "command": "npm run clean:server && babel-node -- ./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "NODE_ENV": "production",
        "SITE_URL": "https://staging.boldr.io",
        "SSR_PORT": 9221,
        "API_HOST": "https://api.boldr.io",
        "API_PREFIX": "/v1"
      }
    },
    "build:client": {
      "command": "npm run clean:client && babel-node -- ./node_modules/.bin/webpack --env production --config tools/webpack/client.prod.js",
      "env": {
        "NODE_ENV": "production",
        "SITE_URL": "https://staging.boldr.io",
        "SSR_PORT": 9221,
        "API_HOST": "https://api.boldr.io",
        "API_PREFIX": "/v1"
      }
    },
    "dev": {
      "command": "concurrently --kill-others \"better-npm-run watch:client\"  \"better-npm-run watch:server\"",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "SSR_PORT": 9221,
        "API_HOST": "http://localhost:9121",
        "API_PREFIX": "/api/v1",
        "SITE_URL": "http://localhost:9221",
        "WP_DS": 3001
      }
    },
    "start:prod": {
      "command": "pm2 start run.js",
      "env": {
        "NODE_ENV": "production",
        "SSR_PORT": 9221,
        "API_HOST": "https://api.boldr.io",
        "API_PREFIX": "/v1"
      }
    },
    "watch:client": {
      "command": "babel-node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "SSR_PORT": 9221,
        "SITE_URL": "http://localhost:9221",
        "API_HOST": "http://localhost:9121",
        "API_PREFIX": "/api/v1",
        "WP_DS": 3001
      }
    },
    "watch:server": {
      "command": "node_modules/.bin/nodemon tools/scripts/server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "API_HOST": "http://localhost:9121",
        "API_PREFIX": "/api/v1",
        "SSR_PORT": 9221,
        "WP_DS": 3001
      }
    },
    "test:client": {
      "command": "./node_modules/.bin/mocha --compilers js:./compiler.babel --require tools/test/helper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./src",
        "SSR_PORT": 9221
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "dependencies": {
    "better-npm-run": "0.0.10",
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "boom": "^3.2.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "draft-js": "^0.7.0",
    "draft-js-multidecorators": "^1.0.0",
    "draft-js-prism": "^1.0.3",
    "errorhandler": "^1.4.3",
    "express": "4.14.0",
    "fbjs": "^0.8.3",
    "http-proxy": "^1.14.0",
    "jwt-decode": "^2.1.0",
    "limax": "^1.4.0",
    "lodash": "^4.14.1",
    "material-ui": "^0.15.3",
    "moment": "^2.14.1",
    "node-fetch": "^1.6.0",
    "react": "15.3.0",
    "react-addons-css-transition-group": "^15.3.0",
    "react-cookie": "^0.4.7",
    "react-dom": "15.3.0",
    "react-dropzone": "^3.5.3",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "react-router-scroll": "^0.3.0",
    "react-tap-event-plugin": "^1.0.0",
    "redial": "^0.4.2",
    "redux": "^3.5.2",
    "redux-auth-wrapper": "^0.6.0",
    "redux-form": "^5.3.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "1.3.0",
    "superagent": "^2.1.0",
    "webfontloader": "^1.6.26",
    "webpack-isomorphic-tools": "^2.5.6",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-plugin-webpack-loaders": "^0.7.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
