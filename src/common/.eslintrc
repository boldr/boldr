{
  "extends": "axial/react",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": false,
    "es6": true
  },
  "plugins": ["import", "babel"],
  "globals": {
    "__CLIENT__": false,
    "__SERVER__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "webpackIsomorphicTools": false,
    "expect": true,
    "global": true,
    "window": true,
    "sinon": true,
    "debug": true,
    "React": true,
    "PropTypes": true,
    "_": true,
    "helpers": true
  },
  "rules": {
    "no-shadow" : 0,
    "consistent-return": 0,
    "import/no-unresolved": 0,
    "no-param-reassign": 0,
    "generator-star-spacing": 0,
    "arrow-parens": 0,
    "react/prefer-stateless-function": 0,
    "react/no-multi-comp": 0
  }
}
