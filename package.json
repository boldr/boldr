{
  "name": "boldr-monorepo",
  "private": "true",
  "version": "0.7.0-alpha.0",
  "description": "universal react content management framework",
  "main": "boldrCMS/server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack",
    "postgres",
    "node",
    "cms",
    "redux"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=3.0.0",
    "yarn": "^0.17.0"
  },
  "scripts": {
    "bootstrap": "./node_modules/.bin/lerna bootstrap",
    "build": "lerna exec npm run build",
    "buildp": "lerna exec npm run buildp",
    "jest-coverage": "yarn run test -- --coverage",
    "test-cms": "cd packages && cd boldr-cms && npm run test:ci",
    "test-api": "cd packages && cd boldr-api && npm run test:ci",
    "test-lerna": "lerna exec -- npm run test:ci"
  },
  "jest": {
    "moduleNameMapper": {
      "^.*\\.scss$": "<rootDir>/tools/jest/styleMock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/packages/boldr-cms/src/**/*.js",
      "<rootDir>/packages/boldr-api/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/boldr-cms/tools/",
      "<rootDir>/packages/boldr-cms/config/",
      "<rootDir>/packages/boldr-cms/docs/",
      "/flow-typed/",
      "/node_modules/",
      "<rootDir>/packages/boldr-cms/.happypack/",
      "<rootDir>/packages/boldr-cms/src/shared/theme/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": ".*.test\\.js",
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest/testSetup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/packages/**/(tools|docs|node_modules|bin|flow-typed|public)/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "/db/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "^18.0.0",
    "babel-preset-boldr": "^0.7.2",
    "babel-preset-env": "1.1.8",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.13.1",
    "eslint-config-boldr": "0.7.2",
    "identity-obj-proxy": "^3.0.0",
    "jasmine-reporters": "^2.2.0",
    "lerna": "2.0.0-beta.32",
    "semver": "5.3.0"
  },
  "dependencies": {
    "knex": "^0.12.6"
  }
}
