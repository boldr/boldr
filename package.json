{
  "name": "boldr",
  "version": "0.0.0",
  "private": true,
  "description": "Boldr CMF platform for Universal React Applications.",
  "scripts": {
    "bootstrap": "./node_modules/.bin/lerna bootstrap --concurrency 4 --stream",
    "clean": "lerna clean --yes",
    "commit": "git-cz",
    "coverage": "codecov",
    "lint": "eslint . --fix",
    "postinstall": "npm run bootstrap",
    "dev": "NODE_ENV=development DEBUG=boldr:* nodemon",
    "precommit": "lint-staged --verbose",
    "prepush": "npm test -- -u",
    "prettier": "node ./internal/scripts/prettier.js write",
    "test": "jest --config ./jest.config.js"
  },
  "keywords": [
    "react",
    "boldr",
    "universal"
  ],
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/strues/boldr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-plugin-module-resolver": "^3.0.0-beta.5",
    "babel-preset-boldr": "0.11.0",
    "babel-preset-env": "^1.6.0",
    "bluebird": "^3.5.0",
    "chalk": "^2.1.0",
    "codecov": "^2.3.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.5",
    "cz-emoji": "^0.2.0",
    "debug": "^3.0.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.6.1",
    "eslint-config-boldr": "^0.12.12",
    "flow-bin": "^0.54.1",
    "fs-extra": "^4.0.1",
    "glob": "^7.1.2",
    "graphql": "^0.11.3",
    "graphql-tag": "^2.4.2",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "istanbul-api": "^1.1.14",
    "istanbul-lib-coverage": "^1.1.1",
    "jest": "^21.0.2",
    "jest-enzyme": "^3.8.2",
    "jest-styled-components": "^4.6.0",
    "jest-transform-graphql": "^2.1.0",
    "lerna": "^2.1.2",
    "lint-staged": "^4.1.3",
    "nodemon": "^1.12.0",
    "prettier": "^1.6.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "semver": "^5.4.1",
    "shelljs": "^0.7.8",
    "sinon": "^3.2.1",
    "styled-components": "^2.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "scopes": [
        "auth",
        "cli",
        "core",
        "frontend",
        "server",
        "tools",
        "utils",
        "ci"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "git add"
    ]
  }
}
