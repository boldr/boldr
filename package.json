{
  "name": "boldr",
  "version": "0.4.6",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "betterScripts": {
    "build": {
      "command": "better-npm-run build:server && better-npm-run build:client && better-npm-run copy-files",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "babel-node -- ./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "BABEL_ENV": "server",
        "NODE_ENV": "production"
      }
    },
    "build:client": {
      "command": "babel-node -- ./node_modules/.bin/webpack --env production --json --config tools/webpack/client.prod.js",
      "env": {
        "BABEL_ENV": "client-prod",
        "NODE_ENV": "production"
      }
    },
    "copy-files": {
      "command": "cp tools/scripts/.buildcopy/run.js build/run.js && cp tools/scripts/.buildcopy/isomorphic.js build/isomorphic.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm-run-all --parallel watch:client watch:server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "SSR_SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001
      }
    },
    "start": {
      "command": "node build/run.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_PORT": 3000
      }
    },
    "test": {
      "command": "BABEL_ENV=server mocha --compilers js:./tools/test/mocha.js --require tools/test/clientHelper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./src",
        "BABEL_ENV": "server",
        "SERVER_PORT": 3000
      }
    },
    "travis": {
      "command": "BABEL_ENV=server mocha --compilers js:./tools/test/mocha.js --require tools/test/clientHelper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "travis",
        "NODE_PATH": "./src/boldr-cms",
        "SERVER_PORT": 3000
      }
    },
    "watch:client": {
      "command": "babel-node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_ENV": "client-dev",
        "SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001
      }
    },
    "watch:server": {
      "command": "nodemon --config nodemon.json",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "server",
        "SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boldr/boldr/issues"
  },
  "homepage": "https://github.com/boldr/boldr#readme",
  "engines": {
    "node": "6.2.0",
    "npm": "3.7.3"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "clean": "rimraf build/",
    "copy-files": "better-npm-run copy-files",
    "dev": "better-npm-run dev",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "seed": "./node_modules/.bin/sequelize db:seed:all",
    "sequelize": "./node_modules/.bin/sequelize",
    "start": "better-npm-run start",
    "test": "better-npm-run test",
    "travis": "better-npm-run test",
    "watch:client": "better-npm-run watch:client",
    "watch:server": "better-npm-run watch:server"
  },
