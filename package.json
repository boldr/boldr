{
  "name": "boldr",
  "version": "0.5.0",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "index.js",
  "directories": {
    "docs": "docs",
    "tools": "tools"
  },
  "betterScripts": {
    "build:server": {
      "command": "./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "BABEL_ENV": "server",
        "NODE_ENV": "production"
      }
    },
    "build:client": {
      "command": "./node_modules/.bin/webpack --env production --json --config tools/webpack/client.prod.js",
      "env": {
        "BABEL_ENV": "client-prod",
        "NODE_ENV": "production"
      }
    },
    "test:client": {
      "command": "BABEL_ENV=server mocha --compilers js:./tools/test/mocha.js --require tools/test/clientHelper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./src",
        "SSR_PORT": 3000
      }
    },
    "watch:client": {
      "command": "node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "client-dev",
        "SSR_PORT": 3000,
        "HOT_RELOAD_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    },
    "watch:server": {
      "command": "nodemon bin/dev.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "server",
        "SSR_PORT": 3000,
        "HOT_RELOAD_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boldr/boldr/issues"
  },
  "homepage": "https://github.com/boldr/boldr#readme",
  "engines": {
    "node": "6.5.0",
    "npm": "3.7.3"
  },
  "scripts": {
    "build": "npm-run-all -s clean build:server build:client copy-files",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "build:dlls": "webpack --verbose --colors --display-error-details --config tools/webpack/util/vendor.config.js",
    "clean": "rimraf static/",
    "clean:hp": "rimraf .happypack",
    "copy-files": "cp tools/.onbuild/run.js static/run.js && cp tools/.onbuild/isomorphic.config.js static/isomorphic.config.js",
    "dev": "npm-run-all --parallel watch:client watch:server",
    "dev:api": "better-npm-run dev:api",
    "knex": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js migrate:latest",
    "seed": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js seed:run",
    "test": "npm-run-all -s test:client",
    "test:client": "better-npm-run test:client",
    "watch:client": "better-npm-run watch:client",
    "watch:server": "better-npm-run watch:server"
  },
  "dependencies": {
    "async": "^2.0.1",
    "aws-sdk": "^2.6.4",
    "babel-polyfill": "^6.13.0",
    "babel-register": "^6.14.0",
    "bcrypt": "^0.8.7",
    "better-npm-run": "0.0.11",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "composable-middleware": "^0.3.0",
    "compression": "^1.6.2",
    "connect-redis": "^3.1.0",
    "convict": "^1.4.0",
    "cors": "^2.8.1",
    "crypto-js": "^3.1.6",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "draft-js": "^0.9.1",
    "draft-js-export-html": "^0.4.0",
    "express": "4.14.0",
    "express-session": "^1.14.1",
    "helmet": "^2.2.0",
    "ioredis": "^2.3.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.1.9",
    "jwt-decode": "^2.1.0",
    "knex": "^0.12.1",
    "lodash": "^4.16.1",
    "method-override": "^2.3.6",
    "moment": "^2.15.1",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "multer-s3": "^2.3.2",
    "node-uuid": "^1.4.7",
    "nodemailer": "^2.6.4",
    "nodemailer-mailgun-transport": "^1.2.2",
    "npm-run-all": "^3.1.0",
    "objection": "^0.6.0-rc.5",
    "objection-find": "^0.1.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-jwt": "^2.1.0",
    "passport-local": "^1.0.0",
    "pg": "^6.1.0",
    "pretty-error": "^2.0.1",
    "react": "15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-addons-transition-group": "^15.3.2",
    "react-dom": "15.3.2",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-router-redux": "^4.0.6",
    "redial": "^0.4.2",
    "redux": "^3.6.0",
    "redux-auth-wrapper": "^0.8.0",
    "redux-connect": "^3.0.0",
    "redux-form": "^6.0.5",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "serialize-javascript": "1.3.0",
    "slugify": "^1.0.2",
    "source-map-support": "^0.4.2",
    "superagent": "^2.3.0",
    "webfontloader": "^1.6.26",
    "webpack-isomorphic-tools": "^2.5.8",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "^6.2.5",
    "babel-node-debug": "^2.0.0",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-things": "^0.2.0",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.5",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-config-boldr": "^1.1.1",
    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "happypack": "^2.2.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.5.0",
    "json-loader": "0.5.4",
    "mocha": "^3.0.2",
    "nock": "^8.0.0",
    "node-noop": "^1.0.0",
    "node-sass": "^3.10.0",
    "nodemon": "^1.10.2",
    "optimize-js-plugin": "0.0.4",
    "postcss-loader": "^0.13.0",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "3.0.0-beta.5",
    "redux-logger": "^2.6.1",
    "redux-mock-store": "^1.2.1",
    "rimraf": "2.5.4",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-middleware": "1.8.2",
    "webpack-hot-middleware": "2.12.2",
    "webpack-node-externals": "^1.4.3"
  }
}
