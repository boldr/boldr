{
  "name": "boldr",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:webpack",
    "build:webpack": "NODE_ENV=production babel-node tools/bin/build",
    "preview": "npm run build && npm run prod",
    "prod": "NODE_ENV=production npm run start:app",
    "start:app": "node tools/bin/start --app",
    "start:api": "node tools/bin/start --api",
    "start": "npm run start:app & npm run start:api & wait",
    "lint": "eslint src tools/webpack tools/bin"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "extends": [
      "axial"
    ]
  },
  "dependencies": {
    "axios": "^0.10.0",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.3.5",
    "body-parser": "^1.15.0",
    "bookshelf": "^0.9.4",
    "compression": "^1.6.1",
    "connect-redis": "^3.0.2",
    "crypto": "0.0.3",
    "express": "^4.13.4",
    "express-jwt": "^3.3.0",
    "express-session": "^1.13.0",
    "ioredis": "^1.15.1",
    "jsonwebtoken": "^5.7.0",
    "knex": "^0.10.0",
    "lodash": "^4.11.1",
    "morgan": "^1.7.0",
    "node-uuid": "^1.4.7",
    "pg": "^4.5.3",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.3.0",
    "react-router-redux": "^4.0.2",
    "redial": "^0.4.1",
    "redux": "^3.5.1",
    "redux-actions": "^0.9.1",
