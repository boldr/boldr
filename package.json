  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr.git"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "clean": "rimraf build/",
    "copy-files": "cp tools/scripts/.buildcopy/run.js build/run.js && cp tools/scripts/.buildcopy/isomorphic.js build/isomorphic.js",
    "dev": "better-npm-run dev",
    "knex": "./node_modules/.bin/knex --knexfile api/core/config/knexfile.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "./node_modules/.bin/knex --knexfile api/core/config/knexfile.js migrate:latest",
    "seed": "./node_modules/.bin/knex --knexfile api/core/config/knexfile.js seed:run",
    "start": "better-npm-run start",
    "test": "better-npm-run test",
    "travis": "better-npm-run test",
    "watch:client": "better-npm-run watch:client",
    "watch:server": "better-npm-run watch:server"
