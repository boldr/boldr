{
  "name": "boldr",
  "version": "0.5.1",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "index.js",
  "directories": {
    "docs": "docs",
    "tools": "tools"
  },
  "betterScripts": {
    "build:client": {
      "command": "./node_modules/.bin/webpack --env production --config tools/webpack/webpack.config.client.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "SSR_PORT": 3000
      }
    },
    "build:server": {
      "command": "./node_modules/.bin/webpack --config tools/webpack/webpack.config.node.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "SSR_PORT": 3000
      }
    },
    "test:client": {
      "command": "mocha --opts ./tools/test/mocha.opts --require tools/test/clientHelper.js './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./src",
        "BABEL_ENV": "test"
      }
    },
    "test:api": {
      "command": "NODE_ENV=test ./node_modules/mocha/bin/mocha --compilers js:babel-core/register --opts tools/test/mocha.opts --recursive src/api/**/*-test.js",
      "env": {
        "NODE_ENV": "test",
        "BABEL_ENV": "test",
        "SSR_PORT": 3000
      }
    },
    "dev:client": {
      "command": "node ./tools/webpack/dev.server.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "development",
        "SSR_PORT": 3000,
        "HMR_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    },
    "dev:server": {
      "command": "nodemon ./bin/dev.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "development",
        "SSR_PORT": 3000,
        "HMR_PORT": 3001,
        "WEBPACK_DLLS": 1
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boldr/boldr/issues"
  },
  "homepage": "https://github.com/boldr/boldr#readme",
  "engines": {
    "node": "6.5.0",
    "npm": "3.7.3"
  },
  "scripts": {
    "build": "npm-run-all -s clean build:server build:client copy-files",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "build:dlls": "webpack --verbose --colors --display-error-details --config tools/webpack/dll.config.js",
    "clean": "rimraf static/",
    "clean:hp": "rimraf .happypack",
    "copy-files": "./tools/scripts/copyFiles.sh",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "better-npm-run dev:client",
    "dev:server": "better-npm-run dev:server",
    "knex": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js migrate:latest",
    "seed": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js seed:run",
    "start:prod": "NODE_ENV=production node static/run.js",
    "test:client": "better-npm-run test:client",
    "test:api": "better-npm-run test:api",
    "typecheck": "flow"
  },
  "dependencies": {
    "async": "^2.0.1",
    "aws-sdk": "^2.6.6",
    "babel-register": "^6.16.3",
    "bcryptjs": "^2.3.0",
    "better-npm-run": "0.0.11",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "composable-middleware": "^0.3.0",
    "compression": "^1.6.2",
    "connect-redis": "^3.1.0",
    "convict": "^1.5.0",
    "cors": "^2.8.1",
    "crypto-js": "^3.1.6",
    "date-fns": "^1.3.0",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "draft-js": "^0.9.1",
    "draft-js-export-html": "^0.4.0",
    "express": "4.14.0",
    "express-session": "^1.14.1",
    "express-winston": "^2.0.0",
    "helmet": "^2.2.0",
    "ioredis": "^2.4.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.1.9",
    "jwt-decode": "^2.1.0",
    "knex": "^0.12.2",
    "lodash": "^4.16.2",
    "method-override": "^2.3.6",
    "moment": "^2.15.1",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "multer-s3": "^2.3.2",
    "node-uuid": "^1.4.7",
    "nodemailer": "^2.6.4",
    "nodemailer-mailgun-transport": "^1.2.2",
    "npm-run-all": "^3.1.0",
    "objection": "^0.6.0-rc.5",
    "objection-find": "^0.1.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-jwt": "^2.1.0",
    "passport-local": "^1.0.0",
    "pg": "^6.1.0",
    "pretty-error": "^2.0.1",
    "react": "15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-addons-transition-group": "^15.3.2",
    "react-dom": "15.3.2",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-router-redux": "^4.0.6",
    "redial": "^0.5.0",
    "redux": "^3.6.0",
