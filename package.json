    "webpack-hot-middleware": "2.12.2",
    "webpack-node-externals": "^1.3.3",
    "webpack-notifier": "^1.3.2"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": true,
      "color-no-invalid-hex": true,
      "declaration-colon-space-after": "always",
      "declaration-colon-space-before": "never",
      "function-comma-space-after": "always",
      "function-url-quotes": "always",
      "media-feature-colon-space-after": "always",
      "media-feature-colon-space-before": "never",
      "media-feature-name-no-vendor-prefix": true,
      "max-empty-lines": 5,
      "number-leading-zero": "never",
      "number-no-trailing-zeros": true,
      "property-no-vendor-prefix": true
    }
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "build:entry": "better-npm-run build:entry",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:client": "rimraf public/assets && rimraf ./webpack-assets.json",
    "clean:server": "rimraf ./server.js && rimraf ./server.js.map",
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "test": "better-npm-run test:client",
    "test:client": "better-npm-run test:client",
    "test:watch": "./node_modules/.bin/mocha  -w --opts ./mocha.opts './src/**/*.test.js'",
    "watch:client": "better-npm-run watch:client",
    "watch:server": "better-npm-run watch:server"
  }
}
