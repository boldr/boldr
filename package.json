{
  "name": "boldr",
  "version": "0.4.0",
  "description": "a bold cms.",
  "main": "tools/scripts/server.js",
  "engines": {
    "node": "6.2.0",
    "npm": "3.7.3"
  },
  "betterScripts": {
    "build": {
      "command": "better-npm-run build:server && better-npm-run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "npm run clean:server && babel-node -- ./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "BABEL_ENV": "server",
        "NODE_ENV": "production"
      }
    },
    "build:entry": {
      "command": "./tools/scripts/createEntry.sh"
    },
    "build:client": {
      "command": "npm run clean:client && babel-node -- ./node_modules/.bin/webpack --env production --json --config tools/webpack/client.prod.js",
      "env": {
        "BABEL_ENV": "client-prod",
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm-run-all --parallel watch:client watch:server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    },
    "start": {
      "command": "node -r dotenv/config tools/scripts/prod.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_PORT": 3000
      }
    },
    "test:client": {
      "command": "./node_modules/.bin/mocha --compilers js:./compiler.babel --require tools/test/helper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./src",
        "SSR_PORT": 9221
      }
    },
    "watch:client": {
      "command": "babel-node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_ENV": "client-dev",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    },
    "watch:server": {
      "command": "./node_modules/.bin/nodemon",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src",
        "BABEL_ENV": "server",
        "SERVER_PORT": 3000,
        "WP_DS": 3001
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "dependencies": {
    "app-root-path": "^1.3.0",
    "better-npm-run": "0.0.10",
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "4.14.0",
    "http-proxy": "^1.14.0",
    "limax": "^1.4.0",
    "lodash": "^4.15.0",
    "material-ui": "^0.15.4",
    "moment": "^2.14.1",
    "node-fetch": "^1.6.0",
    "normalizr": "^2.2.1",
    "react": "15.3.0",
    "react-addons-css-transition-group": "^15.3.0",
    "react-css-modules": "^3.7.10",
    "react-dom": "15.3.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "react-rte": "^0.5.0",
    "react-tap-event-plugin": "^1.0.0",
    "redial": "^0.4.2",
    "redux": "^3.5.2",
    "redux-auth-wrapper": "^0.7.0",
    "redux-form": "^6.0.0-rc.4",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3",
    "serialize-javascript": "1.3.0",
    "superagent": "^2.2.0",
    "webfontloader": "^1.6.26",
    "webpack-isomorphic-tools": "^2.5.7",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
