    "babel-plugin-styled-components": "^1.1.6",
    "babel-preset-boldr": "^0.9.7",
    "babel-preset-env": "^1.5.2",
    "babel-watch": "^2.0.6",
    "better-npm-run": "^0.0.15",
    "cache-loader": "^1.0.3",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.0.0",
