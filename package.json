    "body-parser": "^1.17.2",
    "boldr-utils": "^0.4.0-rc.2",
    "classnames": "^2.2.5",
    "connect-redis": "^3.3.0",
    "convict": "^4.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "data-driven-motion": "^0.0.11",
    "dataloader": "^1.3.0",
    "date-fns": "^2.0.0-alpha.1",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "draft-convert": "^1.4.7",
    "draft-js": "^0.10.1",
    "draftjs-utils": "^0.7.5",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "formidable": "^1.1.1",
    "graphql": "^0.10.3",
    "graphql-server-express": "^1.0.0",
