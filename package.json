{
  "name": "boldr",
  "version": "0.6.0-alpha.1",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "bin/ssr.js",
  "directories": {
    "docs": "docs",
    "tools": "tools",
    "cms": "build/boldrCMS",
    "api": "build/boldrAPI",
    "bin": "bin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack",
    "postgres",
    "node",
    "cms",
    "redux"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boldr/boldr/issues"
  },
  "homepage": "https://github.com/boldr/boldr#readme",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0",
    "yarn": "^0.14.0"
  },
  "betterScripts": {
    "dev:client": {
      "command": "node ./tools/development",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "development"
      }
    },
    "dev:api": {
      "command": "nodemon ./src/api/index.js",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "api",
        "REDIS_CONN_URI": "redis://127.0.0.1:6379/1",
        "API_PORT": 2121
      }
    }
  },
  "scripts": {
    "apidoc": "apidoc -i src/api -o public/apidoc && apidoc-markdown -p public/apidoc -o docs/apidoc.md",
    "babel": "NODE_ENV=production babel --ignore node_modules",
    "build": "npm-run-all -s clean build:client build:api",
    "build:api": "NODE_ENV=production BABEL_ENV=api npm run babel -- ./src/api -d ./build/boldrAPI",
    "build:client": "npm run clean && webpack --config ./tools/webpack/client.config.js && webpack --config ./tools/webpack/universalMiddleware.config.js && webpack --config ./tools/webpack/server.config.js",
    "clean": "rimraf .happypack && rimraf build/",
    "dev": "npm-run-all --parallel dev:api dev:client",
    "dev:client": "better-npm-run dev:client",
    "dev:api": "better-npm-run dev:api",
    "knex": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "migrate": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js migrate:latest",
    "seed": "./node_modules/.bin/knex --knexfile src/api/config/knexfile.js seed:run",
    "start:cms": "node build/boldrCMS/server",
    "test": "NODE_ENV=test jest",
    "typecheck": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/test/styleMock.js",
      "^.+\\.(css|scss)$": "<rootDir>/tools/test/styleMock.js"
    },
    "collectCoverage": true,
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testPathDirs": [
      "<rootDir>/src/cms",
      "<rootDir>/src/api"
    ],
    "setupFiles": [
      "<rootDir>/tools/test/setup.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "apidoc": {
    "title": "Boldr API Documentation",
    "url": "https://boldr.io/api/v1"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "aws-sdk": "^2.6.11",
    "bcryptjs": "^2.3.0",
    "better-npm-run": "^0.0.12",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
