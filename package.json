{
  "name": "boldr",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "version": "0.5.0",
  "author": "Steven Truesdell <steven@strues.io>",
  "betterScripts": {
    "build": {
      "command": "npm run clean && better-npm-run build:client && better-npm-run build:server && npm run copy-files",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "node -- ./node_modules/.bin/webpack --env production --config tools/webpack/node.config.js",
      "env": {
        "BABEL_ENV": "server",
        "NODE_ENV": "production"
      }
    },
    "build:client": {
      "command": "babel-node -- ./node_modules/.bin/webpack --env production --json --config tools/webpack/client.prod.js",
      "env": {
        "BABEL_ENV": "client-prod",
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm-run-all --parallel watch:client watch:server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./cms",
        "SSR_SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001,
        "DEBUG": true
      }
    },
    "start": {
      "command": "node build/run.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_PORT": 3000
      }
    },
    "test": {
      "command": "mocha --compilers js:./tools/test/mocha_runner.js --require tools/test/clientHelper.js --require ignore-styles --opts ./tools/test/mocha.opts './cms/**/*.test.js'",
      "env": {
        "NODE_ENV": "test",
        "NODE_PATH": "./cms",
        "BABEL_ENV": "server"
      }
    },
    "travis": {
      "command": "BABEL_ENV=server mocha --compilers js:./tools/test/mocha_runner.js --require tools/test/clientHelper.js --require ignore-styles --opts ./tools/test/mocha.opts './src/**/*.test.js'",
      "env": {
        "NODE_ENV": "travis",
        "SERVER_PORT": 3000
      }
    },
    "watch:client": {
      "command": "node tools/webpack/wp.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./cms",
        "BABEL_ENV": "client-dev",
        "SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001
      }
    },
    "watch:server": {
      "command": "nodemon --config nodemon.json ./api/serverHook.js",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "server",
        "SERVER_PORT": 3000,
        "HOT_RELOAD_PORT": 3001
      }
    }
  },
  "bugs": {
    "url": "https://github.com/boldr/boldr/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
