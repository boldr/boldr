    "react-helmet": "5.1.3",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-tagsinput": "^3.17.0",
    "react-transition-group": "^1.2.0",
    "react-universal-component": "^1.2.6",
    "redux": "^3.7.1",
    "redux-form": "^6.8.0",
    "redux-thunk": "^2.2.0",
    "request": "^2.81.0",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.3.0",
    "shortid": "^2.2.8",
    "source-map-support": "^0.4.15",
    "styled-components": "^2.1.0",
