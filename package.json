  "scripts": {
    "compile": "NODE_ENV=production babel-node ./node_modules/.bin/webpack --optimize-minimize --progress --config ./tools/webpack/prod.config",
    "clean:dist": "rm -rf static/dist",
    "deploy": "npm run clean:dist && npm run compile && npm run prod",
    "prod": "DEBUG=app:* cross-env NODE_PATH=src NODE_ENV=production babel-node src/server/index.js",
    "start": "cross-env NODE_ENV=development nodemon --debug",
    "dev": "DEBUG=app:* cross-env NODE_PATH=src babel-node -- src/server/index.js",
    "test:api": "mocha --require ignore-styles --compilers js:babel-register --timeout 5000 test/.setup.js test/**/*.spec.js",
    "test:api-watch": "mocha --require ignore-styles --compilers js:babel-register --timeout 5000 test/.setup.js test/**/*.spec.js"
