{
  "parser": "babel-eslint",
  "extends": ["boldr", "boldr/react"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "flowtype",
    "flow-vars"
  ],
  "ecmaFeatures": {
    "defaultParams": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "no-unused-vars": 0,
    "babel/new-cap": 0,
    "babel/arrow-parens": 0,
    "import/no-unresolved": 0
  }
}
